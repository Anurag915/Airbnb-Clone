<% layout('/layout/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2">
    <h1>Enter details for new listing</h1>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a cachy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please write description.</div>
      </div>

      <div class="mb-3">
        <label for="Image" class="form-label">Image</label>
        <input type="file" name="listing[image]" class="form-control" required />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="1,000"
            required
          />
          <div class="invalid-feedback">Please write valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">country</label>

          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />
        </div>
        <div class="invalid-feedback">Please write country name.</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Jaipur,Rajasthan"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please write location.</div>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select
          name="listing[category][]"
          class="form-control"
          id="categorySelect"
          multiple
        >
          <option value="trending">Trending</option>
          <option value="rooms">Rooms</option>
          <option value="iconic">Iconic City</option>
          <option value="mountains">Mountains</option>
          <option value="castles">Castles</option>
          <option value="amazing">Amazing Pools</option>
          <option value="camping">Camping</option>
          <option value="farms">Farms</option>
          <option value="arctic">Arctic Pools</option>
        </select>
        <div class="invalid-feedback">Please select at least one category.</div>
      </div>
      <button class="btn btn-dark add-btn">submit button</button>
    </form>
  </div>
</div>
<script>
  // Initialize the multiselect plugin
  document.addEventListener("DOMContentLoaded", function () {
    $("#categorySelect").multiselect({
      includeSelectAllOption: true,
      enableFiltering: true,
      buttonWidth: "100%",
      nonSelectedText: "Select Category",
      allSelectedText: "All Selected"
    });
  });
</script>
